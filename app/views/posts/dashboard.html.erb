<form action="/posts/create" method="POST">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    Título: <input name="title" type="text"><br>
    Imagen: <input name="image_url" type="text"><br>
    Contenido: <input name="content" type="text"><br>
    <input type="submit" value="Crear Post"><br>
</form>

<table>
<tr>
    <th>ID</th>
    <th>Título</th>
    <th>Creado</th>
    <th>Imagen</th>
    <th>Contenido</th>
</tr>
<% @posts.each do |post| %>
    <tr>
        <td><%= post.id%></td>
        <td><%= post.title%></td>
        <td><%= post.created_at%></td>
        <td><%= image_tag post.image_url%></td>
        <td><%= post.content%></td>
    </tr>
<% end %>
</table>